<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bgblue"
    android:backgroundTint="@color/blue"
    android:padding="8dp"
    android:layout_marginTop="16dp">

    <!-- Image -->

    <!-- Price -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/treatmentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="Treatment Name:"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/treatmentname"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:text="Email:"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="password:"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/contactno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="8dp"
        android:text="Contact no:"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactno"
        android:layout_marginTop="8dp"
        android:text="Experience:"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/experience"
        android:layout_marginTop="8dp"
        android:text="Address:"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/staffid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="8dp"
        android:text="Staff Id :"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/staffid"
        android:layout_marginTop="8dp"
        android:text="Fees: "
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white" />






    <!-- Customize Button -->


</RelativeLayout>