<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bgblue"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Image -->

        <!-- Price -->
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Name:"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/treatmentname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Treatment Name:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/treatmentname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Email:"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/contactno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Contact no:"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contactno"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Gender:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/patientid"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Patient Id:"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/patientid"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:text="Address:"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Date:"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Time:"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/staffid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="Staff Id :"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/pay_fees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/staffid"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="fees :"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/rejectTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pay_fees"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:text="rejected"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@+id/paymentbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="290dp"
            android:backgroundTint="@color/white"
            android:text="Pay Now"
            android:textColor="@color/blue"
            android:visibility="gone" />

        <!-- Customize Button -->


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>